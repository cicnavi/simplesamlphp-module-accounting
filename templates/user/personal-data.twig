
{% extends "@accounting/base.twig" %}

{% set pagetitle = 'Personal Data'|trans %}

{% block content %}

    <h2>{{ pagetitle }} </h2>

    <section id="banner">
        <div>
            {% trans %}This is what we know about you...{% endtrans %}
        </div>
    </section>

    <table>
        <tbody>
            <tr>
                <th>Attribute</th>
                <th>Your value</th>
            </tr>
            {% for name, value in normalizedAttributes %}
                <tr>
                    <td>{{ name|trans }} <a href="#"><img src="{{ asset('css/src/icons/i.svg', 'accounting') }}"></a></td>
                    <td>{{ value }} </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>

    </ul>

{% endblock %}
